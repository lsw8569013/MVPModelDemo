<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:test="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/item_bg_white"
    android:layout_marginTop="@dimen/dp_m_5"
    android:layout_marginBottom="@dimen/dp_m_12"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >


        <LinearLayout
            android:id="@+id/ll_name_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_gm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="姓名"
                android:text="XXX"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/tv_gm_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="18812345678"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="18812345678"
                />
            <View
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="1dip"
                />

            <TextView
                android:id="@+id/tv_overdue_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                test:text="0天"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="right"
                android:text="0天"
                android:singleLine="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:background="#22F9560D"
                android:textColor="#FFF9560D"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/ll_name_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_14"
            >

            <TextView
                android:id="@+id/tv_overdue_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                test:text="89999.22"
                android:textSize="@dimen/sp_14"
                android:text="6期"
                android:textColor="@color/gray_item"
                />

            <TextView
                android:id="@+id/tv_overdue_punish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="6期"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="6期"
                android:textColor="@color/gray_item"
                />

            <!--<TextView-->
                <!--android:id="@+id/tv_gm_time_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--test:text="按周还款"-->
                <!--android:textSize="@dimen/sp_14"-->
                <!--android:layout_marginLeft="@dimen/dp_10"-->
                <!--android:gravity="right"-->
                <!--android:text="按周还款"-->
                <!--android:textColor="@color/gray_item"-->
                <!--/>-->


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
