<?xml version="1.0" encoding="utf-8"?>
<cn.bingoogolapple.refreshlayout.BGARefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:test="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_16"
                android:text="待处理"
                android:textSize="@dimen/sp_23"
                android:textColor="@color/little_back"
                />

            <LinearLayout
                android:id="@+id/rv_wait_check"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_weight="4"
                android:background="@mipmap/waitcheck"
                android:gravity="center"
                android:orientation="vertical"
                >

                <View
                    android:layout_width="1dip"
                    android:layout_height="@dimen/dp_5" />

                <include layout="@layout/wait_check_rv" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_172"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_m_20"
                >


                <RelativeLayout
                    android:id="@+id/rv_wait_sign_contract_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@mipmap/screen_bg">

                    <include layout="@layout/wait_sign_contract_numtv" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rv_send_money_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/yellow_bg"
                    android:layout_marginLeft="@dimen/dp_m_20"
                    >

                    <include layout="@layout/wait_send_money_rv" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_172"
                android:layout_marginTop="@dimen/dp_m_20"
                android:layout_weight="5">

                <RelativeLayout
                    android:id="@+id/rv_write_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/white_bg">

                    <include layout="@layout/write_data_rv" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rv_examine_refuse_rv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/white_bg"
                    android:layout_marginLeft="@dimen/dp_m_20"
                    >

                    <include layout="@layout/examine_refuse_rv" />
                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip" />
        </LinearLayout>

    </ScrollView>


</cn.bingoogolapple.refreshlayout.BGARefreshLayout>