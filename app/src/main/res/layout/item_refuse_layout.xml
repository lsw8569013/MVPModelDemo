<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:test="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_m_5"
    android:layout_marginBottom="@dimen/dp_m_12"
    android:background="@mipmap/item_bg_white"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="@dimen/sp_16"
                test:text="姓名" />

            <TextView
                android:id="@+id/tv_gm_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="18812345678"
                android:textSize="@dimen/sp_16"
                test:text="18812345678" />

            <TextView
                android:id="@+id/tv_gm_type"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/sp_16"
                test:text="闪电贷" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gm_num"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="89999"
                android:textColor="@color/item_black"
                android:textSize="@dimen/sp_14"
                android:singleLine="true"
                test:text="89999.22" />



            <TextView
                android:id="@+id/tv_gm_time_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="right"
                android:text="按周还款"
                android:textColor="@color/gray_item"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                test:text="按周还款" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
