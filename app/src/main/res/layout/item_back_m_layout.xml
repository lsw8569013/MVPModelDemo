<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:test="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/item_bg_white"
    android:layout_marginTop="@dimen/dp_m_10"
    android:layout_marginBottom="@dimen/dp_m_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bm_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat= "@drawable/pay_call"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_40"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        >


        <LinearLayout

            android:id="@+id/ll_name_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_gm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="姓名"
                android:text="XXX"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/item_black"
                />

            <TextView
                android:id="@+id/tv_gm_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text="18812345678"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="18812345678"
                android:textColor="@color/item_black"
                />

            <!--<TextView-->
                <!--android:id="@+id/tv_gm_type"-->
                <!--android:layout_width="0dip"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--test:text="闪电贷"-->
                <!--android:textSize="@dimen/sp_16"-->
                <!--android:layout_marginLeft="@dimen/dp_10"-->
                <!--android:gravity="right"-->
                <!--android:text="闪电贷"-->
                <!--android:singleLine="true"-->
                <!--android:textStyle="bold"-->
                <!--/>-->


        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/ll_name_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_14"
            >

            <TextView
                android:id="@+id/tv_gm_num"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                test:text="89999.22"
                android:text="89999"
                android:textSize="@dimen/sp_23"
                android:textColor="@color/item_black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_gm_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                test:text=""
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="6期"
                android:textColor="@color/gray_item"
                />

            <!--<TextView-->
                <!--android:id="@+id/tv_gm_time_type"-->
                <!--android:layout_width="wrap_content"-->
